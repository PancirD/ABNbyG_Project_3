<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kler.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                style="@style/Title"
                android:layout_centerHorizontal="true"
                android:text="@string/title" />

            <TextView
                android:id="@+id/question0"
                style="@style/QuestionText"
                android:layout_below="@+id/title"
                android:text="@string/question0text" />

            <EditText
                android:id="@+id/name"
                style="@style/EditText"
                android:layout_below="@+id/question0"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:hint="@string/anonymous" />

            <TextView
                android:id="@+id/question1"
                style="@style/QuestionText"
                android:layout_below="@+id/name"
                android:text="@string/question1text" />

            <RadioGroup
                android:id="@+id/question1AnswersGroup"
                style="@style/LayoutWrapContent"
                android:layout_below="@+id/question1">

                <RadioButton
                    android:id="@+id/question1Answer1"
                    style="@style/RadioButton"
                    android:layout_gravity="center_vertical"
                    android:text="@string/question1Answer1Text" />

                <RadioButton
                    android:id="@+id/question1Answer2"
                    style="@style/RadioButton"
                    android:text="@string/question1Answer2Text" />

                <RadioButton
                    android:id="@+id/question1Answer3"
                    style="@style/RadioButton"
                    android:text="@string/question1Answer3Text" />
            </RadioGroup>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/question2"
                style="@style/QuestionText"
                android:layout_below="@+id/question1AnswersGroup"
                android:checked="true"
                android:text="@string/question2text" />

            <RadioGroup
                android:id="@+id/question2AnswersGroup"
                style="@style/LayoutWrapContent"
                android:layout_below="@+id/question2">

                <RadioButton
                    android:id="@+id/question2Answer1"
                    style="@style/RadioButton"
                    android:text="@string/question2Answer1Text" />

                <RadioButton
                    android:id="@+id/question2Answer2"
                    style="@style/RadioButton"
                    android:text="@string/question2Answer2Text" />

                <RadioButton
                    android:id="@+id/question2Answer3"
                    style="@style/RadioButton"
                    android:text="@string/question2Answer3Text" />
            </RadioGroup>

            <TextView
                android:id="@+id/question3text"
                style="@style/QuestionText"
                android:layout_below="@id/question2AnswersGroup"
                android:text="@string/question3text" />

            <CheckBox
                android:id="@+id/question3Answer1Text"
                style="@style/CheckBox"
                android:layout_below="@id/question3text"
                android:text="@string/question3Answer1Text" />

            <CheckBox
                android:id="@+id/question3Answer2Text"
                style="@style/CheckBox"
                android:layout_below="@id/question3Answer1Text"
                android:text="@string/question3Answer2Text" />

            <CheckBox
                android:id="@+id/question3Answer3Text"
                style="@style/CheckBox"
                android:layout_below="@id/question3text"
                android:layout_toEndOf="@id/question3Answer1Text"
                android:layout_toRightOf="@id/question3Answer1Text"
                android:text="@string/question3Answer3Text" />

            <CheckBox
                android:id="@+id/question3Answer4Text"
                style="@style/CheckBox"
                android:layout_below="@id/question3Answer3Text"
                android:layout_toEndOf="@id/question3Answer1Text"
                android:layout_toRightOf="@id/question3Answer1Text"
                android:text="@string/question3Answer4Text" />

            <TextView
                android:id="@+id/question4text"
                style="@style/QuestionText"
                android:layout_below="@+id/question3Answer2Text"
                android:text="@string/question4text" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question3Answer4Text"
                android:layout_toRightOf="@id/question4text"
                android:numStars="2"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <EditText
                android:id="@+id/question4Answer1Text"
                style="@style/EditText"
                android:layout_below="@id/question4text"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:hint="@string/question4Hint" />


            <TextView
                android:id="@+id/question5text"
                style="@style/QuestionText"
                android:layout_below="@id/question4Answer1Text"
                android:text="@string/question5text" />

            <CheckBox
                android:id="@+id/question5Answer1Text"
                style="@style/CheckBox"
                android:layout_below="@id/question5text" />

            <ProgressBar
                android:id="@+id/question5Answer1Object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question5text"
                android:layout_toEndOf="@id/question5Answer1Text"
                android:layout_toRightOf="@id/question5Answer1Text" />

            <CheckBox
                android:id="@+id/question5Answer2Text"
                style="@style/CheckBox"
                android:layout_below="@id/question5text"
                android:layout_toEndOf="@id/question3Answer1Text"
                android:layout_toRightOf="@id/question3Answer1Text" />

            <ProgressBar
                android:id="@+id/question5Answer2Object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question5text"
                android:layout_toEndOf="@id/question5Answer2Text"
                android:layout_toRightOf="@id/question5Answer2Text"
                android:indeterminateDrawable="@drawable/spinner_ring"
                android:indeterminateOnly="true" />

            <CheckBox
                android:id="@+id/question5Answer3Text"
                style="@style/CheckBox"
                android:layout_below="@id/question5Answer1Object" />

            <Button
                android:id="@+id/question5Answer3Object"
                style="@style/AnswerObject"

                android:layout_alignLeft="@id/question5Answer1Object"
                android:layout_alignStart="@id/question5Answer1Object"
                android:layout_below="@id/question5Answer1Object"

                android:clickable="true"
                android:text="@string/ok" />

            <CheckBox
                android:id="@+id/question5Answer4Text"
                style="@style/CheckBox"
                android:layout_below="@id/question5Answer2Object"
                android:layout_toEndOf="@id/question3Answer1Text"
                android:layout_toRightOf="@id/question3Answer1Text" />

            <ImageView
                android:id="@+id/question5Answer4Object"
                style="@style/AnswerObject"
                android:layout_alignLeft="@id/question5Answer2Object"
                android:layout_below="@id/question5Answer2Object"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/done" />
    </LinearLayout>
</ScrollView>
